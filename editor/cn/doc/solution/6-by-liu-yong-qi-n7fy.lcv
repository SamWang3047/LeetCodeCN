class Solution {
public:
    vector<int> divingBoard(int shorter, int longer, int k) {
        if(k == 0) return vector<int>();
        vector<int> ans(1,k*shorter);
        int c = longer-shorter;
        if(shorter==longer) return ans;
        while(k--) ans.push_back(ans.back()+c);
        return ans;
    }
};
